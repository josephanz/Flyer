		{{#each events}}
		<div class="event" id="event{{id}}">		
		  <div class="col-sm-6 col-md-4">
		    <div class="thumbnail">
		      <h3>{{org}}</h3>		
		      <img class="imageEvent" src="{{imageURL}}">
		      <div class="caption">
		        <h4>{{title}}</h4>
		        <p>Date: {{date}}</p>
		        <p>Time: {{time}}</p>
		        <p>Description: {{description}}</p>
