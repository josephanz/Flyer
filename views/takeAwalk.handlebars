					    </optgroup>
					    <optgroup label="Charity">
					    	<option>Walk</option>
					    	<option>Give</option>
					    	<option>Donate</option>
					    </optgroup>	
					    <optgroup label="Party">
					      <option>Off-Campus</option>
					      <option>PC</option>
					      <option>RIMAC</option>
					    </optgroup>
					  </select>
		      	</div>
