		<!-- Modal -->
		<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		  <div class="modal-dialog">
		    <div class="modal-content">
		      <div class="modal-header">
		        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
		        <h4 class="modal-title" id="myModalLabel">Additional Features</h4>
		      </div>
		      <form id="searchForm" action ="/takeAwalk" method ="POST">
		      	 <br>
		      	 <div class="form-group">
				    <label for="search">Search by Name:</label>
				    <input type="text" class="form-control" id="name" name = "selectInput" placeholder="Event Name">
				  </div>
				  <div class="form-group">
				    <label for="date">Search by Date:</label>
				    <input type="date" class="form-control" id="date" placeholder="MMM/DD/YYYY">
				  </div>
				  <div class="form-group">
				    <label for="time">Search by starting Time:</label>
				    <input type="time" class="form-control" id="time" placeholder="HH:MM">
				  </div>
				  <div class="form-group">
				  	<label for="time">Search by Category</label>
		      		<select class="selectpicker" style="width:100%" multiple>
