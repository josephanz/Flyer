  <link href="css/bootstrap.min.css" rel="stylesheet">
  <link href="css/bootstrap-theme.min.css" rel="stylesheet">
  <link href="css/bootstrap-select.css" rel="stylesheet">
  <link rel='stylesheet' href='http://codepen.io/assets/libs/fullpage/jquery-ui.css'>
  <link rel="stylesheet" href="css/secureform.css" media="screen" type="text/css" />
  <link rel="stylesheet" type="text/css" href="css/flyer.css">
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
  <script src="https://code.jquery.com/jquery.js"></script>
  <script src="js/bootstrap.min.js"></script>
  <script src="js/bootstrap-select.js"></script>
  <script type="text/javascript" src="myEvents.json"></script>
  <script src="js/flyer.js" type="text/javascript"></script>
  <title>Flyer</title>
