      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-60501492-1', 'auto');
      ga('send', 'pageview');
  </script>
</head>
<body>
  <div id="contentArea" class="container">
    <nav class="navbar navbar-fixed-top">
    <div class="navigation">
      <center><h1>Flyer</h1>
        <table style="width:99%">
        <tr>
          <td class="on" align="center"><a style="color:white" class="on navLink" href="/myLife"><i class="fa fa-paper-plane"></i> My Life</a></td>
          <td align="center"><a class="navLink clickedTake" href="/takeAwalk"><i class="fa fa-cloud"></i> Take A Walk</a></td>    
          <td align="center"><a class="navLink" href="/myPosts"><i class="fa fa-cloud"></i> Post</a></td>
        </tr>
      </table>
    </div>
    </nav>
  
    <div class="login-card" style="padding:5px; margin:0px auto 10px">
         <center><a href="/logout"><font color="#0071A9"><i class="fa fa-sign-out"></i> Log Out</font></a><center>
    </div>

    {{#each events}}    
    <div class="event" id="event{{id}}">
      <div class="col-sm-6 col-md-4">
        <div class="thumbnail">
          <h3 syle="color:#333333;">{{hostname}}</h3>    
          <img class="imageEvent" src="{{imageURL}}">
          <div class="caption">
            <center><h4>{{title}}</h4></center>
            <p><i class="fa fa-calendar"></i> {{date}}</p>
            <p><i class="fa fa-clock-o"></i> {{starttime}} - {{endtime}}</p>
            <p><i class="fa fa-tags"></i> {{tags}}</p>
            <p><i class="fa fa-location-arrow"></i> {{location}}</p>
            <p><i class="fa fa-info-circle"></i> {{description}}</p>
            <input type="submit" class="removeFromMyLife removeFromMyLife-submit remove-submit" id="removeFromMyLife" value="Remove Event">
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>  
  

  <!--<center><a href="/logout"><font color="FFFFF">Log Out</font></a><center>-->
      
</body>
</html>