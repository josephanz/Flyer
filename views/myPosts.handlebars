</head>
<body>
	<div id="contentArea" class="container">
		
		<nav class="navbar navbar-fixed-top">
		    <div class="navigation">
		      <center><h1>Flyer</h1>
		        <table style="width:99%">
		        <tr>
		          <td align="center"><a class="navLink" href="/myLife"><i class="fa fa-cloud"></i> My Life</a></td>
		          <td align="center"><a class="navLink clickedTake" href="/takeAwalk"><i class="fa fa-cloud"></i> Take A Walk</a></td>    
		          <td class="on" align="center"><a class="on navLink" href="/myPosts" style="color:white"><i class="fa fa-paper-plane"></i> Post</a></td>
		        </tr>
		      </table>
		    </div>
		</nav>
		
		<div class="login-card" style="padding:5px; margin:0px auto 10px">
  			<!---<form action ="/post" method ="">
				<input type="submit" class="login login-submit" value="Create a Flyer">
		 	</form>-->
		 	 <center><a href="/post"><font color="#0071A9"><i class="fa fa-plus-square"></i> Create an Event</font></a><center>	
   		</div>

		{{#each events}}	
		<div class ="event" id="event{{id}}">
		  <div class="col-sm-6 col-md-4">
		    <div class="thumbnail">
		      <h3>{{hostname}}</h3>		
		      <img class="imageEvent" src="{{imageURL}}">
		      <div class="caption">
		        <center><h4>{{title}}</h4></center>
		        <p><i class="fa fa-calendar"></i> {{date}}</p>
		        <p><i class="fa fa-clock-o"></i> {{starttime}} - {{endtime}}</p>
		        <p><i class="fa fa-tags"></i> {{tags}}</p>
		        <p><i class="fa fa-location-arrow"></i> {{location}}</p>
		        <p><i class="fa fa-info-circle"></i> {{description}}</p>
		        <input type="submit" class="cancelEvent delete delete-submit remove-submit" id="cancelEvent" role="button" value="Cancel Event">
		        <!--<form action="/myPosts/delete" method="get" role="form" id="event{{id}}">
		        	<input type="submit" id="eventID" class="delete delete-submit" value="Cancel Event">
		        </form>-->
		      </div>
		    </div>
		  </div>
		</div>
		{{/each}}
	</div>
